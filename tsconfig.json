{
    "compilerOptions": {
      "declaration": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": [
        "esnext",
        "dom"
      ],
      "target": "es2015",
      "strict": true,
      "outDir": "./lib",
      "experimentalDecorators": true,
      "preserveConstEnums": true,
      "removeComments": true,
      "inlineSourceMap": true,
      "typeRoots": [
        "./node_modules/@types"
      ]
    },
    "exclude": [
      "node_modules",
      "**/*-spec.ts"
    ]
  }
